{
  "manifest_version": 2,
  "name": "BrowserFlightDataRecorder",
  "version": "1.2.0",
  "description": "A firefox extension to save html pages you visited. ",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "downloads",
    "webRequest",
    "<all_urls>",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
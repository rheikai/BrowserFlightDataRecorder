{
  "manifest_version": 2,
  "name": "BrowserFlightDataRecorder",
  "version": "3.0.0",
  "description": "A firefox extension to automatically download webpages you visited as single HTML file",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "all_frames": false,
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js",
      "notifyTabId.js"
    ]
  }
}